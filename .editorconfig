root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml,json,md}]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = false
